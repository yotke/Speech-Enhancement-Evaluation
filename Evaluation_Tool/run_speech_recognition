#!/bin/bash

#make directories for files :

run_speech_recognition_func(){

	for file_name in $(ls $1);do
		file_name_t=$(echo $file_name|cut -d'.' -f1)
 		 (python Evaluation_Tool/Speech_Recognition_babble.py $file_name_t) &
		 (python Evaluation_Tool/Speech_Recognition_white.py $file_name_t) 
		
	done
	wait -n
}


run_speech_recognition_func $1
wait -n
